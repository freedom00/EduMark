@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@{var fullname = HttpContextAccessor.HttpContext.Session.GetString("fullname");}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Edu Mark | Welcome!</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0-1/css/all.min.css" />


   
    <!-- <link rel="manifest" href="site.webmanifest"> -->
    <link rel="shortcut icon" type="image/x-icon" href="favicon.ico">
    <!-- Place favicon.ico in the root directory -->
    <!-- CSS here -->

    <link rel="stylesheet" href="~/css/magnific-popup.css">
    <link rel="stylesheet" href="~/css/themify-icons.css">
    <link rel="stylesheet" href="~/css/slicknav.css">
    <link rel="stylesheet" href="~/css/style.css">
    @RenderSection("heads", required: false)

</head>
<body>
    <!-- Navigation Bar -->
    <div id="navContainer" class="container-fluid">
        <nav id="nav" class="navbar navbar-expand-md navbar-light fixed-top">
            <div class="container">
                <a class="navbar-brand" href="./doctor/login">
                    <img src="../../../images/layout/logo.PNG" alt="Fair Pets Vet Logo" height="75">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <!-- fix margin -->
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active ml-sm-1">
                            <a class="nav-link" href="/">Home</a>
                        </li>

                        <li class="nav-item ml-sm-1">
                            <a class="nav-link" href="/appointment">Appointments</a>
                        </li>

                
                        @if (fullname == null)
                        {
                            <li class="nav-item ml-sm-1">
                                <a class="nav-link" href="/login">Login </a>
                            </li>
                            <li class="nav-item ml-sm-1">
                                <a class="nav-link" href="/register">Register</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ml-sm-1">
                                Welcome,@fullname!
                            </li>
                            <li class="nav-item ml-sm-1">
                                <a class="nav-link" href="/logout">Logout</a>
                            </li>
                        }
                        <li class="nav-item ml-sm-1">
                            <a class="nav-link" href="/logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <!-- End of Navigation Bar -->

    <div id="content">
        @RenderBody()
    </div>

    <!-- footer -->
    <footer class="footer footer_bg_1">
        <div class="footer_top">
            <div class="container">
                <div class="row">
                    <div class="col-xl-4 col-md-6 col-lg-4">
                        <div class="footer_widget">
                            <div class="footer_logo">
                                <a href="#">
                                    <img src="~/images/layout/logo.png" alt="">
                                </a>
                            </div>
                            <p>
